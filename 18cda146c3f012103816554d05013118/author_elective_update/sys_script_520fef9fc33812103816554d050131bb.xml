        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

    // Log to check if the script is running
    gs.info("Business Rule triggered for record with email: " + current.email);

    // Ensure the email field is populated
    if (current.email) {
        gs.info("Checking for duplicate email...");

        var gr = new GlideRecord('customer');
        gr.addQuery('email', current.email);  // Adjust field name if needed
        gr.query();

        if (gr.next()) {
            // If a duplicate email is found, prevent submission
            gs.addErrorMessage("You are already signed up with this email address.");
            gs.info("Duplicate email found. Aborting submission.");
            current.setAbortAction(true);  // Prevents insert action
        } else {
            // No duplicate email found, allowing submission
            gs.info("No duplicate email found. Proceeding with submission.");
        }
    } else {
        gs.addErrorMessage("Email address is required.");
        gs.info("Email address is missing or null.");
        current.setAbortAction(true);  // Prevents insert if the email is not present
    }

})(current, previous);
]]></script>
